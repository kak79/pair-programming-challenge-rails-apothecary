<% if @user.errors.any? %>
  <ul class="error-messages">

    <% @user.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>

  </ul>
<% end %>

<%= form_with model: @user do |form| %>

  <%= form.label :username %>
  <%= form.text_field :username %>

  <%= form.label :password %>
  <%= form.text_field :password %>

  <br>

  <%= form.submit  %>
<% end %>
