<!DOCTYPE html>
<html>
  <head>
    <title>RailsApothecary</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link href="https://fonts.googleapis.com/css2?family=Montserrat&display=swap" rel="stylesheet">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <div id="main-container">
      <% if flash[:messages]&.present?  %>
        <% flash[:messages].each do |flash| %>
          <div>
            <%# binding.pry %>
            <%= flash %>
          </div>
        <% end %>
      <% end %>

      <nav>
        <%= link_to "Login", login_path %>
        <%= link_to "Signup", new_user_path %>
        <%= link_to "Treatments", treatments_path %>
        <%= link_to "Your Profile", '#' %>
        <%= link_to "Logout", logout_path %>
      </nav>

      <div id="pharmacy-icon-container">
        <%= image_tag image_url('pharmacy-icon'), alt: "Rails Pharmacy", id: "pharmacy-icon" %>
      </div>

      <%= yield %>

    </div>

    <footer></footer>

  </body>
</html>
